@model Course
@{ ViewData["Title"] = "Create"; }

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Course</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" accept="image/*">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.About"></label>
                        <input asp-for="@Model.CourseDetail.About" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.About" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.AboutApply"></label>
                        <input asp-for="@Model.CourseDetail.AboutApply" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.AboutApply" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.AboutCertification"></label>
                        <input asp-for="@Model.CourseDetail.AboutCertification" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.AboutCertification" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Content"></label>
                        <input asp-for="@Model.CourseDetail.Content" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Language"></label>
                        <input asp-for="@Model.CourseDetail.Language" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.Language" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Duration"></label>
                        <input asp-for="@Model.CourseDetail.Duration" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.ClassDuration"></label>
                        <input asp-for="@Model.CourseDetail.ClassDuration" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.ClassDuration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.StudentsCount"></label>
                        <input asp-for="@Model.CourseDetail.StudentsCount" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.StudentsCount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.StudentsPerGroup"></label>
                        <input asp-for="@Model.CourseDetail.StudentsPerGroup" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.StudentsPerGroup" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.SkillLevel"></label>
                        <input asp-for="@Model.CourseDetail.SkillLevel" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.SkillLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Price"></label>
                        <input asp-for="@Model.CourseDetail.Price" class="form-control">
                        <span asp-validation-for="@Model.CourseDetail.Price" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}


