@model List<Slider>
@{ ViewData["Title"] = "Index"; }

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                @if (@Model.Count() < 5)
                {
    <a asp-action="Create" class="btn btn-success mt-3">Create new Slider</a>}

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Settings
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Description
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/assets/img/slider/@item.Image" style="width:100px; height:80px;" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                        Detail
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                        Update
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        Delete
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
