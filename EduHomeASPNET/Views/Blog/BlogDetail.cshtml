@model Blog
@{
    ViewData["Title"] = "BlogDetail";
}
<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img src="~/assets/img/blog/@Model.Image" alt="blog-details" style="width:757px;height:481px">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Description</h2>
                        <h6>By @Model.Author.FullName /  @Model.PostedTime.ToString("dd MMM yyy") /  <i class="fa fa-comments-o"></i> @Model.CommentsCount</h6>
                        <p>@Model.BlogDetail.FirstContent </p>
                        <p>@Model.BlogDetail.SecondContent </p>
                        <p class="quote">@Model.BlogDetail.ThirdContent </p>
                        <p>@Model.BlogDetail.FourthContent </p>
                    </div>
                    @await Component.InvokeAsync("Reply") 
                </div>
            </div>  
            <div class="col-md-4">
                @await Component.InvokeAsync("Sidebar")
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
