@model Blog
@{
    ViewData["Title"] = "BlogDetail";
}

<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img src="~/assets/img/blog/@Model.Image" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Description</h2>
                        <h6>By @Model.Author.FullName /  June 20, 2017  /  <i class="fa fa-comments-o"></i> @Model.CommentsCount</h6>
                        <p>@Model.BlogDetail.FirstContent </p>
                        <p>@Model.BlogDetail.SecondContent </p>
                        <p class="quote">@Model.BlogDetail.ThirdContent </p>
                        <p>@Model.BlogDetail.FourthContent </p>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>  
            <div class="col-md-4">
                @await Component.InvokeAsync("Sidebar")
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
