@model SubscribeVM
<div class="subscribe-area pt-60 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="subscribe-content section-title text-center">
                    <h2>@Model.Subscribe.Title</h2>
                    <p>@Model.Subscribe.Description</p>
                </div>
                <div class="newsletter-form mc_embed_signup">
                    <div class="text-center" asp-validation-summary="ModelOnly"></div>
                    <form asp-controller="Account" asp-action="Subscribe" method="post" name="mc-embedded-subscribe-form" class="validate" target="_blank" >
                        <div id="mc_embed_signup_scroll" class="mc-form">
                            <div class="form-group">
                                <input asp-for="@Model.SubscribedEmail.Email" name="Email" class="email" id="mce-EMAIL" placeholder="Enter your e-mail address" required>
                                <span asp-validation-for="@Model.SubscribedEmail.Email"></span>
                            </div>
                            
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <button id="mc-embedded-subscribe" class="default-btn" type="submit"><span>subscribe</span></button>
                        </div>
                    </form>
                    <!-- mailchimp-alerts Start -->
                    <div class="mailchimp-alerts">
                        <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                        <div class="mailchimp-success"></div><!-- mailchimp-success end -->
                        <div class="mailchimp-error"></div><!-- mailchimp-error end -->
                    </div>
                    <!-- mailchimp-alerts end -->
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
     <script>
         $("#mc-embedded-subscribe").click(function () {
             $(this).prop("disabled", true)
             $(this).css("cursor", "not-allowed")
         });
     </script>
}

