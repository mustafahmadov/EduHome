@model List<Teacher> 
@foreach (Teacher teacher in Model)
{
<div class="col-md-3 col-sm-4 col-xs-12">
    <div class="single-teacher " style="margin-top: 30px!important">
        <div class="single-teacher-img">
            <a asp-controller="Teacher" asp-action="TeacherDetail" asp-route-id="@teacher.Id">
                  <img src="~/assets/img/teacher/@teacher.Image" alt="teacher">
            </a>
        </div>
        <div class="single-teacher-content text-center">
            <h2><a asp-controller="Teacher" asp-action="TeacherDetail" asp-route-id="@teacher.Id">@teacher.Name @teacher.Surname</a></h2>
            <h4>@teacher.Profession</h4>
            <ul>
                <li><a href="@teacher.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                <li><a href="@teacher.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                <li><a href="@teacher.Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                <li><a href="@teacher.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
            </ul>
        </div>
    </div>
</div>
}

