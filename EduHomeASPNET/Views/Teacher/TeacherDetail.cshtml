@model Teacher
@{
    ViewData["Title"] = "TeacherDetail";
    int count = 0;
}

<!-- Teacher Start -->
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img src="~/assets/img/teacher/@Model.TeacherDetail.DetailedImage" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Name  @Model.Surname</h2>
                    <h5>@Model.Profession</h5>
                    <h4>about me</h4>
                    <p>@Model.TeacherDetail.Description</p>
                    <ul>
                        <li><span>degree: </span>@Model.TeacherDetail.Degree</li>
                        <li><span>experience: </span>@Model.TeacherDetail.Experience</li>
                        <li><span>hobbies: </span>@Model.TeacherDetail.Hobbies</li>
                        <li><span>faculty: </span>@Model.TeacherDetail.Faculty</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span> @Model.Email</p>
                    <p><span>make a call : </span> @Model.Phone</p>
                    <p><span>skype : </span>  @Model.Skype</p>
                    <ul>
                        <li><a href="@Model.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                        <li><a href="@Model.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                        <li><a href="@Model.Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                        <li><a href="@Model.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        @for (int i = 0; i <= 5; i++)
                        {
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>language</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.Skill.Language%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@Model.Skill.Language%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->
