@model Course
@{
    ViewData["Title"] = "CourseDet";
}
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/assets/img/course/@Model.Image" style="width:757px;height:481px" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Name</h2>
                        <p>@Model.CourseDetail.Content</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@Model.CourseDetail.About</p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@Model.CourseDetail.AboutApply</p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                <p class="margin">@Model.CourseDetail.AboutCertification</p>
                               
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>duration <span>@Model.CourseDetail.Duration</span></li>
                                <li>class duration <span>@Model.CourseDetail.ClassDuration</span></li>
                                <li>skill level <span>@Model.CourseDetail.SkillLevel</span></li>
                                <li>language <span>@Model.CourseDetail.Language</span></li>
                                <li>students <span>@Model.CourseDetail.StudentsCount</span></li>
                            </ul>
                        </div>
                    </div>
                    @await Component.InvokeAsync("Reply")
                </div>
            </div>
            <div class="col-md-4">
               @await Component.InvokeAsync("Sidebar")
            </div>
        </div>
    </div>
</div>


