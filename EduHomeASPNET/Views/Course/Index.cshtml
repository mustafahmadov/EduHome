@model List<Course>
@{
    ViewData["Title"] = "Courses";
}

<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <ul id="searchList">
                            <li class="d-flex px-3">
                                <input type="text" placeholder="Search..." name="search" id="input-search-course" />
                            </li>
                        </ul>

                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row" id="courseArea">
            @foreach (Course course in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a asp-controller="Course" asp-action="CourseDetail" asp-route-id="@course.Id">
                                <img src="~/assets/img/course/@course.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a asp-controller="Course" asp-action="CourseDetail" asp-route-id="@course.Id">@course.Name</a></h3>
                            <p>@course.Description</p>
                            <a class="default-btn" asp-controller="Course" asp-action="CourseDetail" asp-route-id="@course.Id">read more</a>
                        </div>
                    </div>
                </div>
            }


        </div>
        <nav aria-label="..." class="justify-content-center">
            <ul class="pagination pagination-sm">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" href="#">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Course" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</div>
<!-- Course End -->
@section Scripts{
<script>
    $(document).on('keyup', '#input-search-course', function () {
        let search = $(this).val().trim();
        //$("#searchList li").slice(1).remove();
        $("#courseArea").html("")
        if (search.length > 0) {
            $.ajax({
                url: "/Course/Search?search=" + search,
                type: "Get",
                success: function (res) {
                    //$("#courseArea").html("")
                    $("#courseArea").append(res);
                }
            })
        }
    })
</script>
   
}
